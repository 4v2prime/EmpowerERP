    <div class="card">
        <div class="card-body">
            <table id="ShortlistedStudents" class="table table-bordered table-striped">
                <thead>
                    <tr>

                        <th>
                           Staff Name
                        </th>
                        <th>
                           Department
                        </th>
                        <th>
                            Designation
                        </th>
                        <th>
                            LeaveCount
                        </th>
                        <th>
                            Approved Leave Count
                        </th>
                        <th>
                          Pending Leave Count
                        </th>
                       
                        <th>
                            Absent Days
                        </th>
                        <th>
                            Payable Days
                        </th>
                        <th>
                            Monthly Basic Salary
                        </th>
                        <th>
                            Net Salary
                        </th>

                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody id="staffListBody">
                    @if (Model != null && Model.lstEmpAttendance != null)
                    {
                        for (int i = 0; i < Model.lstEmpAttendance.Count; i++)
                        {
                            var item = Model.lstEmpAttendance[i];
                            <tr data-department-id="@item.DepartmentID">

                                <td>
                                    @Html.DisplayFor(modelItem => item.StaffName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DepartmentName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Designation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LeaveCount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ApprovedLeaveCount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PendingLeaveCount)
                                </td>
                                @*<td>
            @Html.DisplayFor(modelItem => item.PresentDays)
        </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.AbsentDays)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PayableDays)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MonthlyBasicSalary)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AdjustedNetSalary)
                                </td>

                                <td style="text-align: center;">


                                    <div>
                                        <a href="#" class="icon" data-url="@Url.Action("DetailsAttendanceOfStaff", "Trainer", new {})"
                                           data-toggle="modal" data-target="#EditTaskModal" title="View">
                                            <video width="25" height="25" playsinline loop>
                                                <source src="~/Content/Admin/icon/view.mp4" type="video/mp4" />
                                            </video>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="resultModal" tabindex="-1" role="dialog" aria-labelledby="resultModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title " id="resultModalLabel">Schedule Interview</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="background-color:transparent">
                    <!-- Result form content will be loaded here -->
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/plugins/jquery/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js" type="text/javascript"></script>
